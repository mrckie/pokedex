<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/header") %>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <div class="container mx-auto p-5">
      <h1 class="text-3xl font-bold text-center mb-5">Pok√©dex</h1>

      <!-- üîç Search Form -->
      <form action="/search" method="GET" class="flex justify-center mb-10">
        <input
          type="text"
          name="name"
          placeholder="Search Pok√©mon..."
          class="px-4 py-2 w-1/2 border border-r-0 rounded-l-lg focus:outline-none"
        />
        <button
          type="submit"
          class="bg-blue-500 text-white px-5 py-3 cursor-pointer hover:bg-blue-400 rounded-r-lg"
        >
          Search
        </button>
      </form>

      <!-- Pok√©mon List -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <% pokemonList.forEach(pokemon => { %>
        <a
          href="/pokemon/<%= pokemon.name %>"
          class="p-4 bg-white shadow rounded-lg text-center hover:shadow-xl duration-300 ease-in-out hover:-translate-y-1 hover:scale-102"
        >
          <p class="text-xl capitalize font-semibold"><%= pokemon.name %></p>
        </a>
        <% }); %>
      </div>
    </div>
    <%- include("../partials/footer") %>
  </body>
</html>
